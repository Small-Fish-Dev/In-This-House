@using Sandbox.UI;

@namespace BrickJam.UI
@inherits Panel

<root>
	<span class="title">TIME</span>
	@SecondsFormatted
</root>

@code {

	public Func<float> Seconds { get; set; }

	private string SecondsFormatted => TimeSpan.FromSeconds( Seconds?.Invoke() ?? 0 ).ToString( @"mm\:ss" );

	protected override int BuildHash() => HashCode.Combine( Seconds?.Invoke() ?? 0 );

}

<style>
	Timer {
		flex-direction: column;
		color: white;
		font-size: 32px;
		text-align: center;
		text-shadow: 4px 4px 0px black;
		padding: 10px;
		padding-bottom: 20px;
		background: linear-gradient(to bottom, rgba(black, 0.5) 0% , rgba(black, 0.2) 75%, rgba(black, 0) 100% );
		z-index: 3;

		.title {	
			font-size: 48px;
			color: darken(yellow, 0.2);
			margin-top: 5px;
		}
	}
</style>
