@using Sandbox;
@using Sandbox.UI;

@namespace BrickJam.UI
@inherits Panel

<root>
	<div class="background">
		<div class="items">
			@foreach ( var item in player.Inventory.Items )
			{
				<div class="item">

				</div>
			}
		</div>
	</div>
</root>

@code {
	BrickJam.Player player => Game.LocalPawn as BrickJam.Player;

	public Inventory()
	{
		SetClass( "visible", false );
	}

	public override void Tick()
	{
		if ( Input.Pressed( "Inventory" ) )
			SetClass( "visible", !HasClass( "visible" ) );
	}
	
	protected override int BuildHash()
	{
		var joined = String.Join( ' ', player.Inventory.Items.Select( pair => $"{pair.Key.Name} x{pair.Value}" ) );
		return joined.GetHashCode();
	}
}

<style>
	Inventory {
        position: absolute;
		transition: transform 0.2s ease-in-out;
		transform: translateY(100%);
		width: 500px;
		height: 500px;
		bottom: 0px;
		left: 0px;
		padding: 20px;

		&.visible {
			transform: translateY(0%);
			pointer-events: all;
		}

		.background {
			width: 100%;
			height: 100%;
			background-image: url(ui/inventory.png);
			background-size: 100%;
			image-rendering: pixelated;
		}

		.items {
			position: absolute;
			top: 28%;
			left: 5.5%;
			width: 95%;
			height: 67%;
			//background-color: rgba(red, 0.5);
			flex-direction: row;
			flex-wrap: wrap;

			.item {
				margin-right: 2.6%;
				margin-bottom: 2.1%;
				width: 16.5%;
				height: 22.5%;
				flex-shrink: 0;
				flex-grow: 0;
			}
		}
    }
</style>
