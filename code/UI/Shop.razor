@using System.Runtime.CompilerServices
@using Sandbox.UI;

@namespace BrickJam.UI
@inherits Panel
@attribute [StyleSheet]

<root>
	<div class="window">
		<div class="header">
			<div class="image"></div>
		</div>
		<div class="container">
			<div class="container-content">
				<div class="items">
					@foreach ( var upgrade in PossibleUpgrades )
					{
						<div class="item">
							<div class="info">
								<div class="header">
									@upgrade.Title
								</div>
								<div class="description">
									@upgrade.Description
								</div>
							</div>
							<div class="buy-button">
								<div class="buy">
									BUY!
								</div>
								<div class="price">
									$@upgrade.Price
								</div>
							</div>
						</div>
					}

					@foreach ( var upgrade in LockedUpgrades )
					{
						<div class="item locked">
							<div class="info">
								<div class="header">
									@upgrade.Title
								</div>
								<div class="description">
									@upgrade.Description
								</div>
							</div>
							<div class="buy-button locked">
								<div class="price">
									$@upgrade.Price
								</div>
							</div>
						</div>
					}
				</div>
			</div>
			<div class="border-overlay"></div>
		</div>
	</div>
</root>

@code {

	private static Shop instance;
	public static bool IsOpen => instance.HasClass( "open" );

	public static void Open()
	{
		instance.SetClass( "open", true );
		instance.UpdateUpgradeList();
	}

	public static void Close()
	{
		instance.SetClass( "open", false );
	}

}
