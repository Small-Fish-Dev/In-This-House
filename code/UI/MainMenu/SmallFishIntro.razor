@using Sandbox.UI;
@inherits Panel
@namespace BrickJam.UI.MainMenu

<root style="opacity: @(Hide < 1 ? 0 : 1)">
	<div class="container">
		<div class="logo"/>
	</div>
</root>

<style>
	.gamemainmenu smallfishintro
	{
		align-items: stretch;
	
		padding: 0;
		
		opacity: 1;
		
		transition: opacity 1s ease-in;
		
		> .container
		{
			flex-grow: 1;
			
			align-items: center;
			justify-content: center;
		
			background-image: none;
			background-color: #2446f7;
			
			transition: background-color 2s ease-out;
			
			&:intro
			{
				background-color: #000000;
			}
			
			> .logo
			{
				aspect-ratio: 3.625;
				width: 50%;
				
				background-image: url("/ui/logo_white.png"); // WHOEVER MADE SVGs VERY BLURRY, HAVE A VERY UNPLEASANT DAY
				background-size: cover;		
				background-position: center;
				
				transform: translateY(0%);
				
				opacity: 1;
				
				transition: transform 1s ease-out, opacity 1s ease-out;
				
				&:intro
				{
					transform: translateY(-300%);
					
					opacity: 0;
				}
			}
		}
	}
</style>

@code {

	float Delay => 5f;
	
	TimeUntil Hide = 0;

	public SmallFishIntro()
	{
		Hide = Delay;
	}

	public override void Tick()
	{
		if (Hide)
			this.Navigate( "/" );
	}

	protected override int BuildHash() => HashCode.Combine( (float)Hide );

}
