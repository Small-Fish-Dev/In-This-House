@using Sandbox.UI;

@namespace BrickJam.UI
@inherits Panel

<root>
	@if ( Player.IsStunned )
	{
		<div>Stunned!</div>
		<RadialProgress @Progress=@( () => Player.StunLeft / Player.StunDuration )></RadialProgress>
	}
</root>

@code {

	public Player Player;

	protected override int BuildHash()
	{
		return HashCode.Combine( Player.IsStunned );
	}

}
