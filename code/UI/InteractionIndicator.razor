@using Sandbox.UI;

@namespace BrickJam.UI
@inherits Panel

<root>
	@if ( Player.CurrentlyUsedEntity is not null )
	{
		<RadialProgress @InnerDiameterPercent=@( 75f ) @Progress=@( () => 1 - Player.InteractionComplete / Player.CurrentlyUsedEntity.InteractionDuration )/>
	}
</root>

@code {

	public Player Player;

	protected override int BuildHash()
	{
		return HashCode.Combine( Player.CurrentlyUsedEntity );
	}

}
