@using Sandbox;
@using Sandbox.UI;

@namespace BrickJam.UI
@inherits RootPanel
@attribute [StyleSheet]

<root>
	@{
		switch ( Game.LocalPawn )
		{
			case BrickJam.Player player:
				{
					<StunIndicator @Player=@player />
					break;
				}

			case Spectator:
				{
					<div>yuo're dead lol lmao git gud</div>
					break;
				}
				
			default:
				{
					<div>TODO: unknown pawn type @(Game.LocalPawn.GetType())</div>
					break;
				}
		}
	}
</root>

@code {
	public static Hud Instance { get; private set; }

	public Hud()
	{
		Instance?.Delete( true );
		Instance = this;
	}

	protected override int BuildHash()
	{
		return HashCode.Combine( Game.LocalPawn.GetType() );
	}

}
