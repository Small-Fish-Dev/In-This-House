@using ITH;

@namespace ITH.UI
@inherits GraphicActor

<root>
	<RadialProgress @InnerDiameterPercent=@( 75f ) @ref=ProgressIndicator/>
</root>

<style>
	SingleInteraction {
		transition: opacity 0.1s ease;
		opacity: 1;
		
		&:outro {
			opacity: 0;
		}

		filter: drop-shadow(3px 3px 1px black);
	}
</style>

@code {

	public InteractionRequest Request { get; set; }

	private RadialProgress ProgressIndicator { get; set; }

	protected override void Act()
	{
		base.Act();

		if ( Request?.IsActive ?? false )
		{
			ProgressIndicator.Value = 1 - Request.Complete / Request.Usable.InteractionDuration;
			if ( !Request.Usable.ShouldCenterInteractionHint )
			{
				MoveToWorldPoint( Request.HitPoint );
			}
			else
			{
				MoveToWorldPoint( Request.Usable.GetBoundsCenter() );
			}
		}
	}

}
