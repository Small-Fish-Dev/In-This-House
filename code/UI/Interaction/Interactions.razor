@using Sandbox.UI;

@namespace ITH.UI
@inherits Panel

<root>
	@if (player?.CurrentInteractionRequest?.IsActive ?? false)
	{
		<SingleInteraction @Request=@player?.CurrentInteractionRequest/>
	}
</root>

<style>
	Interactions {
		position: absolute;
		left: 0; top: 0;
		z-index: 0;
	}
</style>

@code {
	static Player player => HUD.Instance.ActivePlayer;

	protected override int BuildHash()
	{
		if (player is null)
			return 0;

		return HashCode.Combine(
		player.CurrentInteractionRequest,
		player.CurrentInteractionRequest is null ? 0 : (float)player.CurrentInteractionRequest.Complete
		);
	}

}
