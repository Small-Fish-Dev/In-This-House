@using Sandbox.UI;

@namespace ITH.UI
@inherits Panel

<root>
	@if ( Player.CurrentInteractionRequest?.IsActive ?? false )
	{
		<SingleInteraction @Request=@Player.CurrentInteractionRequest/>
	}
</root>

<style>
	Interactions {
		position: absolute;
		left: 0; top: 0;
		z-index: 0;
	}
</style>

@code {

	public Player Player { get; set; }

	protected override int BuildHash() => HashCode.Combine(
		Player.CurrentInteractionRequest,
		Player.CurrentInteractionRequest is null ? 0 : (float)Player.CurrentInteractionRequest.Complete
		);

}
